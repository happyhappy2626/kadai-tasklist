<ul class="list-unstyled">
    <% @tasks.each do |task| %>
      <li class="media">
          <!--roundedは画像の角を丸くする--> 
          <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 100 }) %>" alt="">
          <div class="media-body">
              <div>
                  <!--task_user?-->
                  <%= link_to task.user.name, task_path(task.id) %>  <span class="text-muted">posted at <%= task.created_at %></span>
              </div>
              <div>
　　　　　　　　　<p><%= task.status %></p>
                  <p><%= task.content %></p>
              </div>
          </div>
        </li>
    <% end %>
    <%= paginate @tasks %>
</ul>