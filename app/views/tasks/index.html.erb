<% if logged_in? %>
  <%= render 'tasks' %>
  <%= link_to '新規作成タスクの投稿', new_task_path,class: 'btn btn-lg btn-primary' %>
<% else %>
  <h1>タスク一覧</h1>
  <ul>
      <% @tasks.each do |task| %>
        <li><%= link_to task.id, task%>:<%= task.status %> &gt; <%= task.content %></li>
      <% end %>
  </ul>
  
  <%= link_to '新規作成タスクの投稿', new_task_path %>
<% end %>

